    Contando a lista:  @Model.ProdutoList.Count

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Valor</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model.ProdutoList)
            {
                <tr>
                    <td>@p.Id</td>
                    <td>@p.Nome</td>
                    <td>@p.Valor</td>
                </tr>
            }
        </tbody>



    </table>
    <h1>@Model.nome</h1>
</div>
